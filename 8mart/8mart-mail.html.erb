        </tr>
        <tr>
          <td align="center" width="500" style="border-collapse:collapse">
            <table cellpadding="0" cellspacing="0" width="480" style="max-width:500px;min-width:250px;width:100%">
              <tbody>
                <tr>
                <td align="center" width="500" style="border-collapse:collapse;">
                  <table border="0" cellpadding="0" cellspacing="0" width="480" background="#ffffff" style="background-color:#ffffff;border-collapse:collapse;overflow:hidden;border-radius:20px 20px 0px 0px;">
                    <tbody>
                      <tr>
                        <td align="center">
                          <table border="0" cellpadding="0" cellspacing="0" width="100%">
                            <tbody>
                              <tr>
                                <td align="center">
                                  <img alt="" title="" width="480" style="border:medium;display:block;height:auto;max-width:480px;
                                                                      max-height:300px;
                                                                      width:100%" src="<%= header_image_url %>">
                                </td>
                              </tr>
                              <tr>
                                <td style="border-collapse:collapse;color:#000000;font-family:'Verdana' , 'arial' , sans-serif;font-size:14px;font-style:normal;line-height:25px;padding-bottom:20px;text-align:center;padding-top: 20px;">
                                <p>
                                <%- if @full_name %>
                                    <%- if @gender=='f' %>
                                      <%= "Уважаемая #{@full_name}!" %>
                                        <%- else %>
                                      <%= "Уважаемый #{@full_name}!" %>
                                    <%- end %>                                  
                                  <%- end %>
                                </p>                            
                              </tr>
                              <tr>
                                <td style="border-collapse:collapse;color:<%= main_text_color %>;font-family:'Verdana' , 'arial' , sans-serif;font-size:28px;font-style:normal;font-weight:bold;line-height:40px;padding-bottom:0px;text-align:center">
                                  <b style="font-size: 22px;line-height: normal;"><%= main_text %></b>
                                </td>
                              </tr>
                              <tr>
                                <td align="center">
                                  <img alt="" title="" width="480" style="border:medium;display:block;height:auto;max-width:480px;
